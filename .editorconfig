# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true
charset = utf-8

[*.java]
indent_style = space
indent_size = 4
continuation_indent_size = 8

[*.py]
indent_style = space
indent_size = 4

[{Makefile,go.mod,go.sum,*.go}]
insert_final_newline = true
indent_style = tab
indent_size = 4 

[*.groovy]
insert_final_newline = true
max_line_length = 120
tab_width = 4

[{*.bash,*.zsh,*.sh}]
indent_size = 2
tab_width = 2

[*.md]
trim_trailing_whitespace = false
indent_style = space

[{*.yml,*.yaml}]
indent_size = 2

[*.{json}]
indent_size = 2

[*.{ps1,psm1,psd1}]
indent_size = 4

[*.{ps1xml,props,xml}]
indent_size = 2

[*.js]
indent_style = tab

[lib/**.js]
indent_style = space
indent_size = 2

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
